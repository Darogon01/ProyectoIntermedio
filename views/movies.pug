include ./header

main#usrMovies
    ul
    each film in data
        li(id=film.imdbID)
            img.poster(src=film.Poster, alt=`Poster ${film.Title}`)
            div.info
                h2 #{film.Title}
                p 
                    strong Año:
                    |  #{film.Year}
                p 
                    strong Director: 
                    | #{film.Director}
                p 
                    strong Género: 
                    | #{film.Genre}
                p 
                    strong Duración: 
                    | #{film.Runtime}
        button(class=`favorite ${film.imdbID}`)
            img(src="../static/img/nofavorite.svg", alt="favorite icon")
                
script(src='../static/js/usrMovies.js')