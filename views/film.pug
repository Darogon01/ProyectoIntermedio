include ./header

main.searchTitleMain(id=`idFilm_${data.imdbID}`)
    div.wraperserchtitle
        div 
            img.postersearchtitle(src=data.Poster, alt="Imagen pelicula")
        div.containersearchfilm
            h2 Titulo: #{data.Title}
            p Director: #{data.Director}
            p Genero: #{data.Genre}
            p Duración: #{data.Runtime}
            p Año: #{data.Year}
            if data.favorite == "fav"   
                button(class=`favorite idFilm_${data.imdbID} fav`)
                    img(src="../static/img/favorite.svg", alt="favorite icon")
            else
                button(class=`favorite idFilm_${data.imdbID} nofav`)
                    img(src="../static/img/nofavorite.svg", alt="favorite icon")
            
script(src='//cdn.jsdelivr.net/npm/sweetalert2@11')
script(src='../static/js/searchTitle.js')
script(src='../static/js/logout.js')    